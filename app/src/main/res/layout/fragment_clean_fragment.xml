<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jtsw.sharedfloor.Clean_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/cleanBTNconfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:text="User 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_marginRight="10dp"
            android:textSize="25dp"/>

        <TextView
            android:text="Zone 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView26"
            android:id="@+id/textView27"
            android:textSize="25dp"/>
        <TextView
            android:text="Salon,pasillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView27"
            android:id="@+id/textView21"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="User 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView26"
            android:id="@+id/textView28"
            android:textSize="25dp"/>

        <TextView
            android:text="Zone 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView28"
            android:layout_alignStart="@+id/textView27"
            android:layout_below="@+id/textView27"
            android:id="@+id/textView29"
             android:textSize="25dp"
            android:layout_alignLeft="@+id/textView27" />
        <TextView
            android:text="Cocina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView21"
            android:layout_toRightOf="@id/textView29"
            android:layout_below="@+id/textView21"
            android:id="@+id/textView22"
            android:textSize="25dp"
            android:layout_alignLeft="@+id/textView21" />


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
